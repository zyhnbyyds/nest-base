generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId          String   @id @map("user_id")
  openId          String   @unique @map("open_id")
  unionId         String?  @map("union_id")
  nickname        String?  @map("nickname")
  avatarUrl       String?  @map("avatar_url")
  gender          Int      @default(0) @map("gender")
  language        String   @default("zh_CN") @map("language")
  city            String?  @map("city")
  province        String?  @map("province") // 省份
  country         String?  @map("country") // 国家
  phone           String?  @map("phone_number")
  lastLoginTime   DateTime?@map("last_login_time")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  isDelete        Boolean? @default(false) @map("is_delete")

  @@map("user")
  @@index([unionId], name: "union_id_index")
}

